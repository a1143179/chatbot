{
  "name": "chatbot",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://a1143179.github.io/chatbot",
  "engines": {
    "node": "22.14.0"
  },
  "dependencies": {
    "@pixiv/three-vrm": "^3.4.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/three": "^0.178.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "5.0.1",
    "three": "^0.178.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false --passWithNoTests",
    "test:watch": "react-scripts test",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run lint && npm run type-check && npm run test",
    "api:test": "cd api && npm test",
    "api:lint": "cd api && npm run lint",
    "api:pre-commit": "npm run api:lint && npm run api:test",
    "full-pre-commit": "npm run pre-commit && npm run api:pre-commit",
    "build-check": "npm run lint && npm run type-check && npm run test",
    "full-build-check": "npm run lint && npm run type-check && npm run test && npm run build",
    "eject": "react-scripts eject",
    "prepare": "husky"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(three|@pixiv/three-vrm)/)"
    ],
    "moduleNameMapper": {
      "^three/examples/jsm/(.*)$": "three/examples/jsm/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}

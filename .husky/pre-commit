echo "🔍 Running pre-commit checks..."
echo "📝 Running frontend validation..."

# Run frontend validation (lint, type-check, tests - no build)
npm run build-check

if [ $? -eq 0 ]; then
    echo "🔧 Running API tests..."
    
    # Run API tests
    cd api && npm test
    
    if [ $? -eq 0 ]; then
        echo ""
        echo "📊 Pre-commit Check Summary:"
        echo "  Frontend Validation: ✅ PASSED"
        echo "  API Tests: ✅ PASSED"
        echo ""
        echo "✅ All checks passed! Commit allowed."
    else
        echo ""
        echo "❌ API tests failed. Commit blocked."
        exit 1
    fi
else
    echo ""
    echo "❌ Frontend validation failed. Commit blocked."
    exit 1
fi
